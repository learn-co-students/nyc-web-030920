<h1>Login</h1>

<ol>
  <% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
      <li><%= error %></li>
    <% end %>
  <% end %>
</ol>

<%= form_for :session, url: sessions_path  do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>